# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/smart-pantry

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# External APIs
UPC_DATABASE_API_KEY=your_upc_database_api_key
OPEN_FOOD_FACTS_API=https://world.openfoodfacts.org/api/v0
BARCODE_LOOKUP_API_KEY=your_barcode_lookup_api_key

# Store APIs
INSTACART_CLIENT_ID=your_instacart_client_id
INSTACART_CLIENT_SECRET=your_instacart_client_secret
WALMART_API_KEY=your_walmart_api_key
KROGER_CLIENT_ID=your_kroger_client_id
KROGER_CLIENT_SECRET=your_kroger_client_secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379
